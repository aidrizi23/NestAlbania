@model NestAlbania.Data.Property

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center my-4">Edit Property</h1>

<div class="d-flex justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0 text-center">Property Details</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" placeholder="Enter the description here..." />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FullArea" class="form-label"></label>
                        <input asp-for="FullArea" class="form-control" />
                        <span asp-validation-for="FullArea" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="InsideArea" class="form-label"></label>
                        <input asp-for="InsideArea" class="form-control" />
                        <span asp-validation-for="InsideArea" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="BedroomCount" class="form-label"></label>
                        <input asp-for="BedroomCount" class="form-control" />
                        <span asp-validation-for="BedroomCount" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="BathroomCount" class="form-label"></label>
                        <input asp-for="BathroomCount" class="form-control" />
                        <span asp-validation-for="BathroomCount" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Category" class="form-label"></label>
                        <select asp-for="Category" class="form-control" asp-items="ViewBag.Categories"></select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-control" asp-items="ViewBag.Statuses"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="City" class="form-label"></label>
                        <select asp-for="City" class="form-control" asp-items="ViewBag.Cities"></select>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="MainImage" class="control-label"></label>
                        <input type="text" id="mainImagePath" class="form-control" value="~/images/@Model.MainImage" onchange="updateFilePath(this)" />
                        <input type="file" id="mainImageFile" class="form-control-file" style="display: none;" onchange="updateFileName(this)" />
                        <span asp-validation-for="MainImage" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="OtherImages" class="control-label"></label>
                        <input class="form-control" type="file" asp-for="OtherImages" />
                        <span asp-validation-for="OtherImages" class="text-danger"></span>
                    </div>


                    <div class="form-group mb-3 text-center">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <script>
            document.getElementById('mainImagePath').addEventListener('click', function () {
                document.getElementById('mainImageFile').click();
            });

            function updateFileName(input) {
                const fileNameInput = document.getElementById('mainImagePath');
                const fileName = input.files[0] ? input.files[0].name : '';
                fileNameInput.value = '~/images/' + fileName;
            }
        </script>
    }
}
