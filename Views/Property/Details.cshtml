                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="@Url.Content("~/images/properties/" + Model.MainImage)" alt="Property Image" class="d-block w-100">
                            </div>
                            @foreach (var image in Model?.OtherImages)
