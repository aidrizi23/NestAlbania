@model NestAlbania.Data.Property

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Property Details</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/styles.css"> <!-- Customize as per your project's CSS file -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> <!-- Font Awesome for icons -->
    <style>
        body {
            font-family: 'Georgia', serif;
            background-color: #f4f4f4;
            color: #333;
        }

        .main-image img {
            border-radius: 10px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            width: 100%;
            height: auto;
        }

        .carousel-inner img {
            border-radius: 2px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        .property-details {
            background-color: #ffffff;
            border-radius: 10px;
            padding: 2rem;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            margin-top: 2rem;
        }

            .property-details h3 {
                font-size: 1.75rem;
                font-weight: bold;
                color: #2c3e50;
                margin-bottom: 2rem;
            }

            .property-details .row {
                margin-bottom: 1rem;
            }

            .property-details dt {
                font-weight: bold;
                color: #2c3e50;
                margin-bottom: 0.5rem;
            }

            .property-details dd {
                font-size: 1.1rem;
                color: #7f8c8d;
                margin-bottom: 2rem;
            }

        .agent-card {
            background-color: #ffffff;
            border-radius: 5px;
            padding: 1.5rem;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            margin-top: 2rem;
            height: 70%;
        }

        .agent-img {
            width: 100%; /* Adjust size of the square image */
            height: 100%;
            border-radius: 10px; /* Square corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin-bottom: 1rem;
        }

        .btn-primary, .btn-secondary {
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #3498db;
            border-color: #3498db;
        }

        .btn-secondary {
            background-color: #95a5a6;
            border-color: #95a5a6;
        }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }

        .btn-secondary:hover {
            background-color: darkred;
            border-color: #7f8c8d;
        }

        .carousel-item {
            display: flex;
            justify-content: center;
        }

        .carousel-inner {
            display: flex;
        }

        .carousel-item {
            display: flex;
            flex-wrap: nowrap;
            justify-content: space-between;
        }

            .carousel-item img {
                width: 24%; /* Adjust width for spacing between images */
                margin-right: 1%; /* Margin between images */
            }

                .carousel-item img:last-child {
                    margin-right: 0; /* Remove margin for the last image */
                }
    </style>
</head>
<body>
    <main class="container mt-4">
        <!-- Main Image -->
        <div class="row">
            <div class="col-md-8">
                <div class="main-image">
                    <img src="@Url.Content("~/images/properties/" + Model.MainImage)" alt="Main Property Image">
                </div>

                <!-- Thumbnail Carousel -->
                @if (Model.OtherImages.Any())
                {
                    <div id="thumbnailCarousel" class="carousel slide mt-4" data-ride="carousel">
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.OtherImages.Count; i += 4)
                            {
                                <div class="carousel-item @((i == 0) ? "active" : "")">
                                    <div class="d-flex">
                                        @for (int j = i; j < i + 4 && j < Model.OtherImages.Count; j++)
                                        {
                                            <img src="@Url.Content("~/PropertyOtherImages/" + Model.OtherImages[j])" alt="Additional Property Image">
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <a class="carousel-control-prev" href="#thumbnailCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#thumbnailCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                }
            </div>

            <!-- Agent Information -->
            <div class="col-md-4">
                <section class="agent-card">
                    <div class="text-center">
                        <img src="@Url.Content("~/agentImg/" + Model.Agent.Image)" alt="Agent Image" class="agent-img">
                        <h5>@Model.Agent.Name</h5>
                        <p>@Model.Agent.Email</p>
                        <p>@Model.Agent.PhoneNumber</p>
                    </div>
                </section>
            </div>
        </div>

        <!-- Property Details -->
        <section class="property-details">
            <h3>Property Details</h3>
            <div class="row">
                <div class="col-md-3">
                    <dt><i class="fa fa-file-text" aria-hidden="true"></i> Description:</dt>
                </div>
                <div class="col-md-9">
                    <dd>@Html.DisplayFor(model => model.Description)</dd>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <dt><i class="fa fa-usd" aria-hidden="true"></i> Price:</dt>
                </div>
                <div class="col-md-9">
                    <dd>@Html.DisplayFor(model => model.Price) $</dd>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <dt><i class="fa fa-map-o" aria-hidden="true"></i> Full Area:</dt>
                </div>
                <div class="col-md-9">
                    <dd>@Html.DisplayFor(model => model.FullArea) m²</dd>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <dt><i class="fa fa-home" aria-hidden="true"></i> Inside Area:</dt>
                </div>
                <div class="col-md-9">
                    <dd>@Html.DisplayFor(model => model.InsideArea) m²</dd>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <dt><i class="fa fa-bed" aria-hidden="true"></i> Bedrooms:</dt>
                </div>
                <div class="col-md-9">
                    <dd>@Html.DisplayFor(model => model.BedroomCount)</dd>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <dt><i class="fa fa-bath" aria-hidden="true"></i> Bathrooms:</dt>
                </div>
                <div class="col-md-9">
                    <dd>@Html.DisplayFor(model => model.BathroomCount)</dd>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <dt><i class="fa fa-cogs" aria-hidden="true"></i> Status:</dt>
                </div>
                <div class="col-md-9">
                    <dd>@Html.DisplayFor(model => model.Status)</dd>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <dt><i class="fa fa-book" aria-hidden="true"></i> Documentation:</dt>
                </div>
                <div class="col-md-9">
                    <dd>@Html.DisplayFor(model => model.Documentation)</dd>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <dt><i class="fa fa-globe" aria-hidden="true"></i> City:</dt>
                </div>
                <div class="col-md-9">
                    <dd>@Html.DisplayFor(model => model.City)</dd>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <dt><i class="fa fa-calendar" aria-hidden="true"></i> Posted On:</dt>
                </div>
                <div class="col-md-9">
                    <dd>@Model.PostedOn.ToString("yyyy-MM-dd")</dd>
                </div>
            </div>
        </section>
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
