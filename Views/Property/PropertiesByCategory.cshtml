@model IEnumerable<NestAlbania.Data.Property>

@{
    ViewData["Title"] = "Properties by Category";
}

<h2 class="mb-4">Properties in @ViewData["Category"] Category</h2>

@if (!Model.Any())
{
    <p>No properties available in this category.</p>
}
else
{
    <div class="row">
        @foreach (var property in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card shadow-sm">
                 
       <img class="card-img-top" src="@Url.Content("~/images/properties/" + property.MainImage)" alt="Property Image" style="height: 200px; object-fit: cover;">

                    <div class="card-body">
                        <h3 class="card-title">@property.Name</h3>
                        <p class="card-text">Price: @property.Price</p>
                        <p class="card-text">Bedrooms: @property.BedroomCount</p>
                        <p class="card-text">Bathrooms: @property.BathroomCount</p>
                        <p class="card-text">Category: @property.Category</p>
                        <a href="@Url.Action("Details", "PropertyApi", new { id = property.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

                        <style>/* Style for the properties listing page */
.property-list {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
}

.property-card {
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease-in-out;
    width: 100%;
    max-width: 300px;
}

.property-card:hover {
    transform: scale(1.05);
}

/* Image styling */
.property-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-bottom: 1px solid #ddd;
}

/* Card body styling */
.property-card h3 {
    font-size: 1.5rem;
    margin: 10px 0;
    padding: 0 15px;
}

.property-card p {
    margin: 5px 15px;
    color: #555;
    font-size: 1rem;
}

/* Button styling */
.property-card .btn {
    display: block;
    margin: 10px 15px;
    background-color: #007bff;
    border: none;
    color: white;
    padding: 10px;
    text-align: center;
    text-decoration: none;
    font-size: 1rem;
    border-radius: 4px;
    transition: background-color 0.3s ease;
}

.property-card .btn:hover {
    background-color: #0056b3;
}


}
</style>