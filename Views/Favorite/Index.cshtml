@model IEnumerable<NestAlbania.Data.UserFavorite>

@{
    ViewData["Title"] = "My Favorite Properties";
}

<div class="container">
    <h2>My Favorite Properties</h2>
    <div class="row">
        @foreach (var favorite in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src="@Url.Content("~/images/properties/" + favorite.Property.MainImage)" class="card-img-top" alt="Property Image">
                    <div class="card-body">
                        <h5 class="card-title">@favorite.Property.Name</h5>
                        <p class="card-text">@favorite.Property.Description</p>
                        <p class="card-text"><strong>Price:</strong> @favorite.Property.Price $</p>

                        <form asp-controller="Favorite" asp-action="RemoveFavorite" method="post">
                            <input type="hidden" name="favoriteId" value="@property.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fas fa-star"></i> Remove from Favorites
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
