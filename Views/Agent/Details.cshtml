@model NestAlbania.Data.Agent

@{
    ViewData["Title"] = "Agent Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Adjust if needed
}

<!-- Link the agent-details.css file -->
<link rel="stylesheet" href="~/css/agent-details.css" />

<!-- Contact Agent Link -->
@* <div class="mt-4">
    <a href="https://mail.google.com/mail/?view=cm&fs=1&to=@Model.Email" class="btn btn-info" target="_blank">Contact this agent</a>
</div>

 *@
<div class="container mt-4">
    <div class="row">
        <!-- Profile Card -->
        <div class="col-md-4">
            <div class="card text-center">
                <img src="@Url.Content("~/agentImg/" + Model.Image)" class="card-img-top" alt="@Model.Name @Model.Surname">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name @Model.Surname</h5>
                </div>
            </div>
        </div>

        <!-- Agent Details -->
        <div class="col-md-8">
            <h2 class="mb-4">@Model.Name @Model.Surname</h2>

            <div class="row">
                <div class="col-sm-4 detail-label">
                    @Html.DisplayNameFor(model => model.Motto)
                </div>
                <div class="col-sm-8 detail-value">
                    @Html.DisplayFor(model => model.Motto)
                </div>

                <div class="col-sm-4 detail-label">
                    @Html.DisplayNameFor(model => model.Email)
                </div>
                <div class="col-sm-8 detail-value">
                    @Html.DisplayFor(model => model.Email)
                </div>

                <div class="col-sm-4 detail-label">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </div>
                <div class="col-sm-8 detail-value">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </div>

                <div class="col-sm-4 detail-label">
                    @Html.DisplayNameFor(model => model.LicenseNumber)
                </div>
                <div class="col-sm-8 detail-value">
                    @Html.DisplayFor(model => model.LicenseNumber)
                </div>

                <div class="col-sm-4 detail-label">
                    @Html.DisplayNameFor(model => model.YearsOfExeperience)
                </div>
                <div class="col-sm-8 detail-value">
                    @Html.DisplayFor(model => model.YearsOfExeperience)
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-4">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

    <!-- Properties Section -->
    <h3 class="mt-5">Properties</h3>
    <div class="row">
        @foreach (var property in Model?.Properties)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="@Url.Content("~/images/properties/" + property.MainImage)" class="property-agent-details" alt="Property Image">
                    <div class="card-body">
                        <h5 class="card-title">@property.Name</h5>
                        <p class="card-text">@property.Description</p>
                        <a href="@Url.Action("Details", "Property", new { id = property.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Bootstrap Tooltip Initialization -->
<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>

<style>
    /* agent-details.css */
    .property-agent-details{
        object-fit: cover;
        height: 300px;
        width: 300px;
        margin: auto;
    }

    .card-img-top {
        border-radius: 50%;
        object-fit: cover;
        height: 300px;
        width: 300px;
        margin: auto;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-top: 10px;
    }

    .card-text {
        font-size: 1rem;
        color: #6c757d;
    }

    .detail-label {
        font-weight: bold;
    }

    .detail-value {
        margin-bottom: 15px;
    }

    .card {
        margin-bottom: 20px;
    }
</style>
